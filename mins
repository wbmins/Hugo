#!/bin/bash

: '
uasr: wbmins
mail: wbminions@gmail.com
desc: a convenient git and hugo shell
'

: '
desc: commit and push
args: commit msg
'

push() {
    git add .
    git commit -m "$1"
    git push -u origin master
}


: '
desc: hugo localhost
args: none
'
server() {
    hugo server -D
}

: '
desc: created a hugo blog
args: filename
'
new() {
    hugo new posts/$1.md
}

if [ ! -z "$1" ]; then
    if [ "$1" == "push" ]; then
        push "$2"
    fi
    if [ "$1" == "new" ]; then
        new "$2"
    fi
    [ "$1" == "server" ] && server
fi